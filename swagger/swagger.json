{
    "openapi": "3.0.0",
    "info": {
      "title": "API de BLACK CRUSADE",
      "version": "1.0.0",
      "description": "API para la gestión de productos y autenticación de usuarios en BLACK CRUSADE."
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "paths": {
      "/register": {
        "get": {
          "summary": "Muestra la página de registro.",
          "responses": {
            "200": {
              "description": "Página de registro mostrada con éxito."
            }
          }
        }
      },
      "/create": {
        "post": {
          "summary": "Crea un nuevo usuario.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "302": { "description": "Redirige a la página de inicio de sesión tras la creación exitosa." },
            "500": { "description": "Error interno del servidor." }
          }
        }
      },
      "/login": {
        "get": {
          "summary": "Muestra la página de inicio de sesión.",
          "responses": {
            "200": { "description": "Página de inicio de sesión mostrada con éxito." }
          }
        },
        "post": {
          "summary": "Inicia sesión de usuario.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "idToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Inicio de sesión exitoso.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": { "type": "boolean" }
                    }
                  }
                }
              }
            },
            "500": { "description": "Error interno del servidor." }
          }
        }
      },
      "/dashboard": {
        "get": {
          "summary": "Muestra el dashboard con la lista de productos.",
          "security": [{ "cookieAuth": [] }],
          "responses": {
            "200": { "description": "Dashboard mostrado con éxito." },
            "401": { "description": "No autorizado." }
          }
        }
      },
      "/logout": {
        "post": {
          "summary": "Cierra la sesión del usuario.",
          "responses": {
            "302": { "description": "Redirige a la página de inicio de sesión tras el cierre de sesión." }
          }
        }
      },
      "/products": {
        "post": {
          "summary": "Crea un nuevo producto.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nombre": { "type": "string" },
                    "descripcion": { "type": "string" },
                    "precio": { "type": "number" },
                    "categoria": { "type": "string" },
                    "imagen": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "201": { "description": "Producto creado con éxito." },
            "500": { "description": "Error interno del servidor." }
          }
        },
        "get": {
          "summary": "Obtiene todos los productos.",
          "responses": {
            "200": { "description": "Lista de productos obtenida con éxito." },
            "500": { "description": "Error interno del servidor." }
          }
        }
      },
      "/products/{productId}": {
        "get": {
          "summary": "Obtiene un producto por ID.",
          "parameters": [{
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "string" }
          }],
          "responses": {
            "200": { "description": "Producto encontrado." },
            "404": { "description": "Producto no encontrado." },
            "500": { "description": "Error interno del servidor." }
          }
        },
        "put": {
          "summary": "Actualiza un producto por ID.",
          "parameters": [{
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "string" }
          }],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nombre": { "type": "string" },
                    "descripcion": { "type": "string" },
                    "precio": { "type": "number" },
                    "categoria": { "type": "string" },
                    "imagen": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "200": { "description": "Producto actualizado con éxito." },
            "404": { "description": "Producto no encontrado." },
            "500": { "description": "Error interno del servidor." }
          }
        },
        "delete": {
          "summary": "Elimina un producto por ID.",
          "parameters": [{
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "string" }
          }],
          "responses": {
            "200": { "description": "Producto eliminado con éxito." },
            "404": { "description": "Producto no encontrado." },
            "500": { "description": "Error interno del servidor." }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "cookieAuth": {
          "type": "apiKey",
          "in": "cookie",
          "name": "token"
        }
      }
    }
  }
  